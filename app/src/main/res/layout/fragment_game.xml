<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/gameArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/game_background" />

    <!-- Виджет курса золота -->
    <LinearLayout
        android:id="@+id/goldRateWidget"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:background="@drawable/widget_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/goldRateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Золото\nзагрузка..."
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/closeWidgetButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="@color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/black_transparent"
        android:padding="8dp"
        android:text="Очки: 0 | Промахи: 0"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tiltIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="60dp"
        android:background="@color/black_transparent"
        android:padding="8dp"
        android:text="Управление наклоном активно!"
        android:textColor="@color/green"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/my_primary"
        android:padding="16dp"
        android:text="Начать игру"
        android:textColor="@color/white"
        android:textSize="24sp" />

</FrameLayout>